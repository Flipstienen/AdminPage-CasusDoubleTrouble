<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KE03_INTDEV_SE_2_Base</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KE03_INTDEV_SE_2_Base.styles.css" asp-append-version="true" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.9/dist/chart.umd.min.js"></script>

</head>
<body>
<nav id="sidebar" class="bg-light border-end vh-100 d-flex flex-column p-3" style="width: 250px; position: relative;">
    <div class="text-center mb-4">
        <div id="ProfileSection" class="text-center mb-4 mt-5">
                <img src="https://media.licdn.com/dms/image/v2/D4E03AQHT7C9ZeqrkKA/profile-displayphoto-shrink_800_800/profile-displayphoto-shrink_800_800/0/1726751445693?e=1753920000&v=beta&t=n_3esJ3-RI_v2PrZPF8gH7FaJXzFCxyq6SP087338v8" alt="User profile" class="rounded-circle mb-2" width="100" height="100">
            <h6 class="mb-0" style="color: black;">Hi Hugo.</h6>
        </div>
<hr/>
    </div>

    <button id="toggleBtn"
            class="btn p-0 position-absolute top-0"
            style="left: 15px; top: 15px; width: 30px; height: 30px; background: transparent; border: none;"
            aria-label="Toggle sidebar"
            onclick="toggleSidebar()">
        <span style="display:block; width: 22px; height: 2px; background-color: black; margin: 4px 0;"></span>
        <span style="display:block; width: 22px; height: 2px; background-color: black; margin: 4px 0;"></span>
        <span style="display:block; width: 22px; height: 2px; background-color: black; margin: 4px 0;"></span>
    </button>

    <ul class="nav nav-pills flex-column mt-1">
        <li class="nav-item mb-2">
            <a class="nav-link d-flex align-items-center quickselectsidebar" asp-area="" asp-controller="Home" asp-action="Index" style="color: black;">
                <img src="~/Images/Speed.svg" alt="dashboard" class="me-2" style="filter: none;">
                <h5 class="mb-0 navigation">Dashboard</h5>
            </a>
        </li>
        <li class="nav-item mb-2">
            <a class="nav-link d-flex align-items-center quickselectsidebar" asp-area="" asp-controller="Customers" asp-action="Index" style="color: black;">
                <img src="~/Images/Group.svg" alt="customers" class="me-2" style="filter: none;">
                <h5 class="mb-0 navigation">Customers</h5>
            </a>
        </li>
        <li class="nav-item mb-2">
            <a class="nav-link d-flex align-items-center quickselectsidebar" asp-area="" asp-controller="Products" asp-action="Index" style="color: black;">
                <img src="~/Images/package_search.svg" alt="products" class="me-2" style="filter: none;">
                <h5 class="mb-0 navigation">Products</h5>
            </a>
        </li>
        <li class="nav-item mb-2">
            <a class="nav-link d-flex align-items-center quickselectsidebar" asp-area="" asp-controller="Orders" asp-action="Index" style="color: black;">
                <img src="~/Images/package.svg" alt="orders" class="me-2" style="filter: none;">
                <h5 class="mb-0 navigation">Orders</h5>
            </a>
        </li>
        <li class="nav-item mb-2">
            <a class="nav-link d-flex align-items-center quickselectsidebar" asp-area="" asp-controller="Stocks" asp-action="Index" style="color: black;">
                <img src="~/Images/package_car.svg" alt="stocks" class="me-2" style="filter: none;">
                <h5 class="mb-0 navigation">Stock</h5>
            </a>
        </li>
        <li class="nav-item mb-2">
            <a class="nav-link d-flex align-items-center quickselectsidebar" asp-area="" asp-controller="Statistics" asp-action="Index" style="color: black;">
                <img src="~/Images/Chart_alt.svg" alt="statistics" class="me-2" style="filter: none;">
                <h5 class="mb-0 navigation">Statistics</h5>
            </a>
        </li>
    </ul>
</nav>


    <div id="main">
        <main role="main">
            @RenderBody()
        </main>
    </div>
</body>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</html>

