<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KE03_INTDEV_SE_2_Base</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KE03_INTDEV_SE_2_Base.styles.css" asp-append-version="true" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.9/dist/chart.umd.min.js"></script>

</head>
<body>
    <nav id="sidebar" class="bg-light border-end">
        <button class="btn btn-outline-primary" id="opened" style="color: gray; border-color: gray" onclick="toggleSidebar()">☰</button>
        <div class="p-3">
            <ul class="nav flex-column">
                <li class="nav-item mb-2">
                    <a class="d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/Images/Speed.svg" alt="dashboard" />
                        <h5 class="nav-link flex-fill navigation">Dashboard</h5>
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="d-flex" asp-area="" asp-controller="Customers" asp-action="Index">
                        <img src="~/Images/Group.svg" alt="customers" />
                        <h5 class="nav-link navigation flex-fill">Customers</h5>
                </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="d-flex align-items-center" asp-area="" asp-controller="Products" asp-action="Index">
                        <img src="~/Images/package_search.svg" alt="products" />
                        <h5 class="nav-link flex-fill navigation">Products</h5>
                    </a>
                </li>
                @* <li class="nav-item mb-2"> *@
                @*     <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> *@
                @* </li> *@
            </ul>
        </div>
    </nav>
    
    @* <button class="btn btn-outline-primary" id="closed" onclick="toggleSidebar()">☰</button> *@

    <div id="main">
        <main role="main">
            @RenderBody()
        </main>
    </div>
</body>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</html>

