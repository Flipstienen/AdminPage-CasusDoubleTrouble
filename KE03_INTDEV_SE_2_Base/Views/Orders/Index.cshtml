@model IEnumerable<DataAccessLayer.Models.Order>

@{
    ViewData["Title"] = "Orders";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="nav-link" style="width: 150px" asp-action="Create">Create New</a>
</p>
<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.OrderDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customer)
                </th>
                <th>
                    Products
                </th>
                <th> 
                    Quantity
                </th>
                <th>
                    OrderPrice
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DeliveryOption)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Delivered)
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Customer.Address)
                    </td>
                    <td>
                        @foreach (var product in item.OrderParts)
                        {
                            <span>@product.Part.Name</span>

                            <br />
                        }
                    </td>
                    <td>
                        @foreach (var product in item.OrderParts)
                        {
                            <span>@product.Quantity</span>
                            <br />
                        }
                    </td>
                    <td>
                        @foreach(var product in item.OrderParts){
                        @((product.Quantity * product.Part.Price).ToString("C", new System.Globalization.CultureInfo("nl-NL")).Replace(",00", ",-"))
						    <br />
                        }
                        <span class="text-nowrap">total: @((item.OrderParts.Sum(p => p.Quantity * p.Part.Price)).ToString("C", new System.Globalization.CultureInfo("nl-NL")).Replace(",00", ",-"))</span>
                    </td>
				    <td>
					    @Html.DisplayFor(modelItem => item.DeliveryOption)
				    </td>
                    <td>
					    @Html.DisplayFor(modelItem => item.Delivered)
                    </td>
                <td>
                        <a class="nav-link" style="width: 75px" asp-action="Details" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />