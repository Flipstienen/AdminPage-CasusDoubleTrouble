@model DataAccessLayer.Models.Part
@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0 rounded-4">
        <div class="row g-0">
            <div class="col-md-5">
                <img src="@Model.ImageUrl" class="img-fluid rounded-start-4" alt="Afbeelding van @Model.Name" style="height:100%; object-fit:cover;">
            </div>
            <div class="col-md-7">
                <div class="card-body">
                    <h3 class="card-title">@Model.Name</h3>
                    <p class="text-muted">@Model.Description</p>
                    <p><strong>Price:</strong> @Model.Price.ToString("C", new System.Globalization.CultureInfo("nl-NL")).Replace(",00", ",-")</p>
                    <p><strong>Buy-in Price:</strong> @Model.BuyInPrice.ToString("C", new System.Globalization.CultureInfo("nl-NL")).Replace(",00", ",-")</p>
                    <p><strong>Stock:</strong> @Model.Stock stuks</p>

                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-dark">Order</a>
                    <a asp-action="Index" class="btn btn-outline-secondary ms-2">Back</a>
                </div>
            </div>
        </div>
    </div>
</div>
