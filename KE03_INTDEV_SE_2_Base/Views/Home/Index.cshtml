@using Newtonsoft.Json

@{
ViewData["Title"] = "Dashboard";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <canvas id="userRegistrationLineChart" style="width:100%; height:400px;"></canvas>
        </div>
        <div class="col-md-6">
            <canvas id="orderLineChart" style="width:100%; height:400px;"></canvas>
        </div>
    </div>
</div>



@section Scripts {
<script>
    // Customers
    const customerMonths = @Html.Raw(JsonConvert.SerializeObject(ViewData["CustomerMonths"]));
    const customerCounts = @Html.Raw(JsonConvert.SerializeObject(ViewData["RegisteredCustomersCount"]));
    const customerTitle = @Html.Raw(JsonConvert.SerializeObject(ViewData["CustomerChartTitle"] as string));
    const maxYCustomers = @ViewData["MaxCustomers"];
    const ctxCustomer = document.getElementById('userRegistrationLineChart').getContext('2d');

    new Chart(ctxCustomer, {
        type: 'line',
        data: {
            labels: customerMonths,
            datasets: [{
                label: 'User Registrations',
                data: customerCounts,
                backgroundColor: 'rgba(54, 162, 235, 0.4)',
                borderColor: 'rgba(54, 162, 235, 1)',
                borderWidth: 2,
                fill: true,
                tension: 0.4
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                title: {
                    display: true,
                    text: customerTitle,
                    font: { size: 18 }
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    max: maxYCustomers
                },
                x: {
                    title: { display: true }
                }
            }
        }
    });

    // Orders
    const orderMonths = @Html.Raw(JsonConvert.SerializeObject(ViewData["OrderMonths"]));
    const orderCounts = @Html.Raw(JsonConvert.SerializeObject(ViewData["OrderCounts"]));
    const orderTitle = @Html.Raw(JsonConvert.SerializeObject(ViewData["OrderChartTitle"] as string));
    const maxYOrders = @ViewData["MaxOrders"]
    const ctxOrder = document.getElementById('orderLineChart').getContext('2d');

    new Chart(ctxOrder, {
        type: 'line',
        data: {
            labels: orderMonths,
            datasets: [{
                label: 'Orders',
                data: orderCounts,
                backgroundColor: 'rgba(255, 99, 132, 0.4)',
                borderColor: 'rgba(255, 99, 132, 1)',
                borderWidth: 2,
                fill: true,
                tension: 0.4
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                title: {
                    display: true,
                    text: orderTitle,
                    font: { size: 18 }
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    max: maxYOrders,
                },
                x: {
                    title: { display: true }
                }
            }
        }
    });
</script>
}
